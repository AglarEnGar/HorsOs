; -> WINDOWS FOR EWW WIDGETS <- ;

;;;; IMPORTS
(include "eww_widgets.yuck")

;;;; Big Calendar Window

(defwindow calendar
  :wm-ignore: true
  :monitor 0
  :windowtype "desktop"
  :geometry (geometry :x "0%"
                      :y "30px"
                      :width "480"
                      :height "320"
                      :anchor "center top")
(cal))

(defwindow bigpowermenu
  :wm-ignore false
  :monitor 0
  :exclusive false
  :windowtype "normal"
  :stacking "fg"
  :geometry (geometry :x "0px"
                      :y "0%"
                      :width "20%"
                      :height "10%"
                      :anchor "center center")
(bigpowermenu))


;; Define the window itself
(defwindow powermenu
  :monitor 0 ;; Or specify your preferred monitor number
  :geometry (geometry :width "400px"
                      :height "250px"
                      :anchor "center")
  :stacking "overlay"
  :exclusive false
  :namespace "powermenu"
  :windowtype "normal"
  :wm-ignore false
	(powermenu))

